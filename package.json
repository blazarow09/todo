{
  "name": "my-tasks",
  "private": true,
  "version": "2.3.2",
  "description": "A modern desktop todo application with folder organization, labels, priorities, and more",
  "author": "blazarow",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:fast": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:install": "node scripts/install-electron.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:1420 && electron .\"",
    "electron:pack": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "electron:build": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win nsis",
    "electron:build:portable": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win portable",
    "electron:build:linux": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --linux",
    "electron:build:linux:deb": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --linux deb",
    "electron:build:linux:appimage": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --linux AppImage",
    "electron:publish": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win nsis --publish always",
    "electron:publish:portable": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win portable --publish always",
    "electron:publish:linux": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --linux --publish always",
    "electron:publish:all": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win nsis --linux --publish always",
    "electron:build:all": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win nsis --linux",
    "icon:help": "node scripts/create-icon.js"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@iconify/react": "^6.0.2",
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "universalify": "^2.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.3",
    "electron-builder": "^24.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.todo.widget",
    "productName": "My Tasks",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "node_modules/.pnpm/**/*",
      "package.json",
      "!**/locales",
      "!**/locales/**"
    ],
    "extraFiles": [],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "build/icon.ico",
      "sign": null,
      "signingHashAlgorithms": null,
      "extraResources": []
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "asar": true,
    "compression": "maximum",
    "asarUnpack": [],
    "electronLanguages": [],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-${version}-setup.${ext}",
      "warningsAsErrors": false
    },
    "linux": {
      "maintainer": "blazarow <blazarow@users.noreply.github.com>",
      "target": [
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Utility",
      "desktop": {
        "Name": "My Tasks",
        "Comment": "A modern desktop todo application",
        "Keywords": "todo;tasks;productivity;",
        "StartupNotify": "true",
        "StartupWMClass": "my-tasks"
      },
      "synopsis": "A modern desktop todo application with folder organization, labels, priorities, and more",
      "description": "My Tasks is a modern desktop todo application featuring folder organization, labels, priorities, due dates, and more. Built with Electron and React for a smooth, native desktop experience."
    },
    "deb": {
      "depends": [],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "blazarow09",
      "repo": "todo",
      "releaseType": "release"
    }
  }
}
