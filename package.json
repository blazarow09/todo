{
  "name": "my-tasks",
  "private": true,
  "version": "2.3.12",
  "description": "A modern desktop todo application with folder organization, labels, priorities, and more",
  "author": "blazarow",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:web": "tsc && vite build --base /",
    "build:fast": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:install": "node scripts/install-electron.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:1420 && electron .\"",
    "electron:pack": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "electron:build": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win nsis",
    "electron:build:portable": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win portable",
    "electron:publish": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win nsis --publish always",
    "electron:publish:portable": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win portable --publish always",
    "electron:publish:all": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win nsis --publish always",
    "electron:build:all": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win nsis",
    "icon:help": "node scripts/create-icon.js",
    "cap:sync": "npm run build && npx cap sync",
    "cap:open": "npx cap open android",
    "cap:run": "npx cap run android",
    "cap:build": "npm run build && npx cap sync && cd android && gradlew.bat assembleDebug"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/browser": "^7.0.2",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/filesystem": "^7.1.4",
    "@capacitor/local-notifications": "^7.0.3",
    "@capacitor/share": "^7.0.2",
    "@capacitor/splash-screen": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@hello-pangea/dnd": "^18.0.1",
    "@iconify/react": "^6.0.2",
    "@ionic/react": "^8.7.10",
    "@ionic/react-router": "^8.7.10",
    "electron-updater": "^6.6.2",
    "firebase": "^12.6.0",
    "firebase-admin": "^13.6.0",
    "fs-extra": "^11.2.0",
    "ionicons": "^8.0.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "universalify": "^2.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.3",
    "electron-builder": "^24.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.todo.widget",
    "productName": "My Tasks",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "node_modules/.pnpm/**/*",
      "package.json",
      "!**/locales",
      "!**/locales/**"
    ],
    "extraFiles": [],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "build/icon.ico",
      "sign": null,
      "signingHashAlgorithms": null,
      "extraResources": []
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "asar": true,
    "compression": "maximum",
    "asarUnpack": [],
    "electronLanguages": [],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-${version}-setup.${ext}",
      "warningsAsErrors": false
    },
    "publish": {
      "provider": "github",
      "owner": "blazarow09",
      "repo": "todo",
      "releaseType": "release"
    },
    "protocols": [
      {
        "name": "My Todo",
        "schemes": [
          "mytodo"
        ]
      }
    ]
  }
}
